<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget"></style>

    <style name="CustomTabPager" parent="android:Theme.NoTitleBar">
        <item name="tabPageIndicatorStyle">@style/CustomTabPagerIndicator</item>
    </style>

    <style name="Widget.TabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tab_view_background</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="bottomIndicatorColor">@color/skyblue</item>
        <item name="bottomIndicatorHeight">@dimen/default_bottom_view_height</item>
    </style>

    <style name="CustomTabPagerIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textColor">@color/gray_normal</item>
        <item name="android:divider">@drawable/custom_tab_indicator_divider</item>
        <item name="android:dividerPadding" tools:ignore="NewApi">10dp</item>
        <item name="android:showDividers" tools:ignore="NewApi">middle</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="bottomIndicatorHeight">3dp</item>
    </style>

    <style name="TextAppearance.TabPageIndicator" parent="Widget">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/vpi__dark_theme</item>
    </style>

</resources>